  </gazebo>

  <joint name="joint_wall_02" type="fixed">
    <origin xyz="${size_b} 0 ${wall_height/2}" rpy="0 0 0" />
    <parent link="world" />
    <child link="wall_02" />
  </joint>

  <!-- wall_03 -->
  <link name="wall_03">
    <xacro:box_inertial x="${wall_depth}" y="${size_b}" z="${wall_height}" mass="5.0">
