<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="diag_walls" params="name">

  <!-- wall_00 -->
  <link name="wall_00">
    <xacro:box_inertial x="${wall_depth}" y="${size_a}" z="${wall_height}" mass="5.0">
      <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:box_inertial>
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="${wall_depth} ${size_a} ${wall_height}" />
      </geometry>
      <material name="DIAG/Grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="${wall_depth} ${size_a} ${wall_height}" />
      </geometry>
    </collision>
  </link>

  <gazebo reference="wall_00">
    <material>wall_floor_05</material>
  </gazebo>

  <joint name="joint_wall_00" type="fixed">
    <origin xyz="0 0 ${wall_height/2}" rpy="0 0 0" />
    <parent link="world" />
    <child link="wall_00" />
  </joint>


  <!-- wall_01 -->
  <link name="wall_01">
    <xacro:box_inertial x="${wall_depth}" y="${size_b}" z="${wall_height}" mass="5.0">
      <origin xyz="0 0 0" rpy="0 0 0" />
