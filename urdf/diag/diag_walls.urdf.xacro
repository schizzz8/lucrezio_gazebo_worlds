    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="${wall_depth} ${size_b} ${wall_height}" />
      </geometry>
    </collision>
  </link>

  <gazebo reference="wall_01">
    <material>wall_floor_04</material>
  </gazebo>

  <joint name="joint_wall_01" type="fixed">
    <origin xyz="${size_b/2} ${size_a/2} ${wall_height/2}" rpy="0 0 1.57" />
    <parent link="world" />
    <child link="wall_01" />
  </joint>

  <!-- wall_02 -->
  <link name="wall_02">
    <xacro:box_inertial x="${wall_depth}" y="${size_a}" z="${wall_height}" mass="5.0">
